<div class="container">
  <h2>Adaptive Real-Time Scheduler</h2>
  <div class="info-box" style="
  background: #f3efff;
  padding: 18px;
  border-radius: 14px;
  margin-bottom: 22px;
  box-shadow: inset 0 0 10px rgba(0,0,0,0.06);
  font-size: 15px;
  line-height: 1.5;
  color: #3b2fa3;
">
  <b>üîç What This Simulation Shows</b><br><br>
  This Adaptive Real-Time Scheduler continuously monitors all tasks you enter. 
  It calculates their <b>priority</b> using the formula:<br>
  <b>Priority = Time Left / Workload</b><br><br>

  ‚úî A task with <b>less time left</b> gets <b>higher urgency</b><br>
  ‚úî A task with <b>higher workload</b> gets <b>lower priority</b><br><br>

  The scheduler automatically picks the task with the <b>lowest priority value</b> 
  (most urgent) and highlights it in <b>üü¢ green</b>.<br><br>

  If a task‚Äôs deadline runs out, it becomes <b>üî¥ expired</b> and is highlighted in red.<br><br>

  Below the table, the graph shows how the <b>priority of the selected task</b> 
  changes over time ‚Äî giving you a real-time visualization of scheduling decisions.
</div>


  <form id="taskForm">
    <input type="text" id="tid" placeholder="Task Name" required>
    <input type="number" id="workload" placeholder="Workload" required min="1">
    <input type="number" id="deadline" placeholder="Deadline (sec)" required min="1">
    <input type="submit" value="Add Task">
  </form>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Workload</th>
        <th>Deadline</th>
        <th>Time Left</th>
        <th>Priority</th>
      </tr>
    </thead>
    <tbody id="tbody"></tbody>
  </table>


  <div class="graph-box">
    <h3 style="text-align:center; color:#4f3dcc;">Real-Time Priority Simulation</h3>
    <canvas id="priorityGraph" width="850" height="280"></canvas>
  </div>

  <div class="footer">
    üü¢ Green = Next Task to Execute ‚Ä¢ üî¥ Red = Deadline Missed
  </div>
</div>

<script>
class Task {
  constructor(name, workload, deadlineSec) {
    this.name = name;
    this.workload = Number(workload);
    this.deadline = Date.now() + deadlineSec * 1000;
    this.priority = 0;
  }

  updatePriority() {
    const timeLeft = Math.max(0.001, (this.deadline - Date.now()) / 1000);
    this.priority = timeLeft / this.workload;
  }

  timeLeft() {
    const t = (this.deadline - Date.now()) / 1000;
    if (t <= 0) return "0.0s";
    return t.toFixed(1) + "s";
  }

  isExpired() {
    return (this.deadline - Date.now()) <= 0;
  }

  getDeadlineTime() {
    return new Date(this.deadline).toLocaleTimeString();
  }
}

const tasks = [];
const graphData = [];
const maxGraphPoints = 50;

document.getElementById("taskForm").addEventListener("submit", e => {
  e.preventDefault();

  const tid = document.getElementById("tid").value.trim();
  const wl = document.getElementById("workload").value;
  const dl = document.getElementById("deadline").value;

  tasks.push(new Task(tid, wl, dl));

  document.getElementById("tid").value = "";
  document.getElementById("workload").value = "";
  document.getElementById("deadline").value = "";
});

function update() {
  tasks.forEach(t => t.updatePriority());
  tasks.sort((a, b) => a.priority - b.priority);

  const tbody = document.getElementById("tbody");
  tbody.innerHTML = "";

  tasks.forEach((t, index) => {
    const row = document.createElement("tr");

    if (index === 0 && !t.isExpired()) row.className = "scheduled";
    if (t.isExpired()) row.classList.add("expired-row");

    row.innerHTML = `
      <td>${t.name}</td>
      <td>${t.workload}</td>
      <td>${t.getDeadlineTime()}</td>
      <td>${t.timeLeft()}</td>
      <td>${t.priority.toFixed(3)}</td>
    `;

    tbody.appendChild(row);
  });

  updateGraph();
}

function updateGraph() {
  const canvas = document.getElementById("priorityGraph");
  const ctx = canvas.getContext("2d");

  ctx.clearRect(0, 0, canvas.width, canvas.height);

  if (tasks.length === 0) return;

  const topTask = tasks[0];
  graphData.push(topTask.priority);

  if (graphData.length > maxGraphPoints) graphData.shift();

  ctx.beginPath();
  ctx.lineWidth = 3;
  ctx.moveTo(0, canvas.height - graphData[0] * 200);

  for (let i = 1; i < graphData.length; i++) {
    ctx.lineTo(i * (canvas.width / maxGraphPoints), canvas.height - graphData[i] * 200);
  }

  ctx.strokeStyle = "#6236ff";
  ctx.stroke();
}

setInterval(update, 300);
</script>

</body>
